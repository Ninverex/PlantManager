<Window x:Class="MenadzerRoslin.EdytujRoslineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytuj roślinę" Height="400" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Edytuj roślinę" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Nazwa rośliny:"/>
            <TextBox x:Name="NazwaTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Gatunek:"/>
            <ComboBox x:Name="GatunekComboBox" DisplayMemberPath="NazwaGatunku" Margin="0,0,0,10"/>

            <TextBlock Text="Miejsce:"/>
            <ComboBox x:Name="MiejsceComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Salon"/>
                <ComboBoxItem Content="Sypialnia"/>
                <ComboBoxItem Content="Kuchnia"/>
                <ComboBoxItem Content="Łazienka"/>
                <ComboBoxItem Content="Biuro"/>
                <ComboBoxItem Content="Balkon"/>
                <ComboBoxItem Content="Taras"/>
                <ComboBoxItem Content="Inne"/>
            </ComboBox>

            <TextBlock Text="Data zakupu:"/>
            <DatePicker x:Name="DataZakupuDatePicker" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Anuluj" IsCancel="True" Width="80" Margin="0,0,10,0"/>
            <Button Content="Zapisz" IsDefault="True" Width="80" Click="ZapiszButton_Click"/>
        </StackPanel>
    </Grid>
</Window>