<Window x:Class="MenadzerRoslin.Views.SzczegolyRoslinyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szczegóły rośliny" Height="750" Width="850"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F9FBF9">
    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Light"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#66AA69"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="SemiBold" FontSize="14" Foreground="#2E7D32" Margin="5,0"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#66BB6A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ListView">
            <Setter Property="BorderBrush" Value="#DCEDC8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Border Background="White" CornerRadius="8" Margin="10" Padding="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="1" Opacity="0.2" Color="#000000"/>
        </Border.Effect>
        
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Nagłówek -->
            <Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="#E8F5E9" Padding="0,0,0,15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock x:Name="NazwaTextBlock" Text="Nazwa rośliny" Style="{StaticResource HeaderTextStyle}" 
                           FontSize="28" FontWeight="Light" Foreground="#1B5E20"/>
                    <TextBlock x:Name="GatunekTextBlock" Text="Gatunek" Style="{StaticResource HeaderTextStyle}" 
                           FontSize="16" Foreground="#66BB6A"/>
                </StackPanel>
            </Border>

            <!-- Zawartość -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Informacje podstawowe -->
                <GroupBox Grid.Column="0" Grid.Row="0" Header="Informacje podstawowe" Margin="0,0,10,15">
                    <StackPanel Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Miejsce: " FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="MiejsceTextBlock" Text="Salon" Margin="5,5,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Data zakupu: " FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DataZakupuTextBlock" Text="01.01.2023" Margin="5,5,0,5"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Wymagania -->
                <GroupBox Grid.Column="1" Grid.Row="0" Header="Wymagania pielęgnacyjne" Margin="0,0,0,15">
                    <TextBlock x:Name="WymaganiaTextBlock" TextWrapping="Wrap" Margin="5" LineHeight="20"/>
                </GroupBox>

                <!-- Historia zabiegów -->
                <GroupBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Header="Historia zabiegów">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ListView Grid.Row="0" x:Name="ZabiegiListView" Margin="0,0,0,15" BorderThickness="1" BorderBrush="#E8F5E9">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Data" DisplayMemberBinding="{Binding DataWykonania, StringFormat=\{0:dd.MM.yyyy\}}" Width="100"/>
                                    <GridViewColumn Header="Typ" DisplayMemberBinding="{Binding TypZabiegu}" Width="120"/>
                                    <GridViewColumn Header="Opis" DisplayMemberBinding="{Binding Opis}" Width="320"/>
                                </GridView>
                            </ListView.View>
                            <ListView.Resources>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="Background" Value="#E8F5E9"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </ListView.Resources>
                        </ListView>

                        <Button Grid.Row="1" Content="Dodaj zabieg" Click="DodajZabieg_Click" HorizontalAlignment="Right" Height="30" Width="90"/>
                    </Grid>
                </GroupBox>
            </Grid>

            <!-- Przyciski -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Edytuj" Click="EdytujRosline_Click" Width="90"  Margin="0,0,15,0" Background="#FFA726"/>
                <Button Content="Zamknij" IsCancel="True" Width="90" Height="30" Background="#b20001"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>