<Window x:Class="MenadzerRoslin.Views.SzczegolyRoslinyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenadzerRoslin.Views"
        mc:Ignorable="d"
        Title="Szczegóły rośliny" Height="800" Width="1100"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <!-- Style dla przycisków -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style dla GroupBox -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#DADADA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#2E7D32"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" x:Name="NazwaTextBlock" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2E7D32"/>

        <!-- Zawartość -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lewa kolumna - informacje o roślinie -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <GroupBox Header="Informacje podstawowe" Padding="10" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Gatunek:" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock Grid.Column="1" x:Name="GatunekTextBlock" FontSize="15"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Miejsce:" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock Grid.Column="1" x:Name="MiejsceTextBlock" FontSize="15"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Data zakupu:" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock Grid.Column="1" x:Name="DataZakupuTextBlock" FontSize="15"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Wymagania pielęgnacyjne" Padding="10" Margin="0,0,0,15">
                    <TextBlock x:Name="WymaganiaTextBlock" TextWrapping="Wrap" FontSize="15"/>
                </GroupBox>

                <!-- Zdjęcie rośliny -->
                <GroupBox Header="Zdjęcie rośliny" Padding="10" Margin="0,0,0,15">
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Height="275">
                        <Image x:Name="ZdjecieImage" Stretch="Uniform" Margin="5"/>
                    </Border>
                </GroupBox>
            </StackPanel>

            <!-- Prawa kolumna - historia zabiegów -->
            <GroupBox Grid.Column="1" Header="Historia zabiegów" Padding="10" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListView Grid.Row="0" x:Name="ZabiegiListView" Margin="0,0,0,10" BorderThickness="0"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="140"
                                            HeaderContainerStyle="{StaticResource NonResizableHeaderStyle}">
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="💧 Typ zabiegu" FontSize="16" FontWeight="Bold" Foreground="#2E7D32"/>
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TypZabiegu}" FontSize="15" Foreground="#2E7D32" Margin="5,2"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Width="160"
                                            HeaderContainerStyle="{StaticResource NonResizableHeaderStyle}">
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="📅 Data wykonania" FontSize="16" FontWeight="Bold" Foreground="#000000"/>
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DataWykonania, StringFormat={}{0:dd.MM.yyyy}}" FontSize="15" Foreground="#000000" Margin="5,2"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Opis kolumna z automatycznym zawijaniem -->
                            <GridViewColumn HeaderContainerStyle="{StaticResource NonResizableHeaderStyle}">
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="📝 Opis" FontSize="16" FontWeight="Bold" Foreground="#000000"/>
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Opis}" FontSize="15" Foreground="#000000" Margin="5,2"
                                                   TextWrapping="Wrap" TextTrimming="CharacterEllipsis" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>


                    <Button Grid.Row="1" Content="Dodaj zabieg" Click="DodajZabieg_Click" HorizontalAlignment="Right" Width="120" Height="35" Background="#4CAF50"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Edytuj roślinę" Click="EdytujRosline_Click" Width="120" Height="35" Margin="0,0,10,0" Background="#FFA726"/>
            <Button Content="Zamknij" IsCancel="True" Width="100" Height="35" Background="#F44336"/>
        </StackPanel>
    </Grid>
</Window>