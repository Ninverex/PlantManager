<Window x:Class="MenadzerRoslin.Views.SzczegolyRoslinyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szczegóły rośliny" Height="500" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="NazwaTextBlock" Text="Nazwa rośliny" FontSize="24" FontWeight="Bold"/>
            <TextBlock x:Name="GatunekTextBlock" Text="Gatunek" FontSize="16" Foreground="#4CAF50"/>
        </StackPanel>

        <!-- Zawartość -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Informacje podstawowe -->
            <GroupBox Grid.Column="0" Grid.Row="0" Header="Informacje podstawowe" Margin="0,0,10,10">
                <StackPanel Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Miejsce: " FontWeight="Bold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="MiejsceTextBlock" Text="Salon"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Data zakupu: " FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DataZakupuTextBlock" Text="01.01.2023" Margin="0,5,0,0"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Wymagania -->
            <GroupBox Grid.Column="1" Grid.Row="0" Header="Wymagania pielęgnacyjne" Margin="0,0,0,10">
                <TextBlock x:Name="WymaganiaTextBlock" TextWrapping="Wrap" Margin="10"/>
            </GroupBox>

            <!-- Historia zabiegów -->
            <GroupBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Header="Historia zabiegów" Margin="0,0,0,0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListView Grid.Row="0" x:Name="ZabiegiListView" Margin="0,0,0,10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Data" DisplayMemberBinding="{Binding DataWykonania, StringFormat=\{0:dd.MM.yyyy\}}" Width="100"/>
                                <GridViewColumn Header="Typ" DisplayMemberBinding="{Binding TypZabiegu}" Width="120"/>
                                <GridViewColumn Header="Opis" DisplayMemberBinding="{Binding Opis}" Width="300"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Button Grid.Row="1" Content="Dodaj zabieg" Click="DodajZabieg_Click" HorizontalAlignment="Right"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Edytuj" Click="EdytujRosline_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Zamknij" IsCancel="True" Width="80"/>
        </StackPanel>
    </Grid>
</Window>