<Window x:Class="MenadzerRoslin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenadzerRoslin"
        mc:Ignorable="d"
        Title="Menadżer Roślin Domowych" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Style dla przycisków -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E8E41"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style dla TabControl -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- Style dla TabItem -->
        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" BorderThickness="0,0,0,3" 
                                BorderBrush="Transparent" Background="Transparent"
                                Margin="0,0,4,0" Padding="10,5">
                            <ContentPresenter ContentSource="Header" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style dla ListView -->
        <Style TargetType="ListView">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
        </Style>
        
        <!-- Style dla GridViewColumnHeader -->
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek aplikacji -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="🌱 Menadżer Roślin Domowych" FontSize="26" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Dbaj o swoje rośliny z łatwością" FontSize="14" Foreground="#E0F2E1" Margin="0,5,0,0"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" Text="{Binding}"
                           FontSize="16" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
            </Grid>
        </Border>

        <!-- Główna zawartość -->
        <Border Grid.Row="1" Background="#F9FFF9" Padding="15">
            <TabControl>
                <TabItem Header="Moje Rośliny">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Nagłówek sekcji -->
                        <TextBlock Grid.Row="0" Text="Kolekcja Twoich roślin" FontSize="18" Margin="0,0,0,15"/>

                        <!-- Lista roślin -->
                        <Border Grid.Row="1" Background="White" CornerRadius="5" BorderThickness="1" BorderBrush="#E0E0E0">
                            <ListView x:Name="RoslinyListView" Margin="0" BorderThickness="0"
                                      MouseDoubleClick="RoslinyListView_MouseDoubleClick"
                                      SelectionChanged="RoslinyListView_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Nazwa}" Width="200"/>
                                        <GridViewColumn Header="Gatunek" DisplayMemberBinding="{Binding Gatunek.NazwaGatunku}" Width="200"/>
                                        <GridViewColumn Header="Miejsce" DisplayMemberBinding="{Binding Miejsce}" Width="150"/>
                                        <GridViewColumn Header="Data zakupu" DisplayMemberBinding="{Binding DataZakupu, StringFormat=\{0:dd.MM.yyyy\}}" Width="120"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Border>

                        <!-- Przyciski akcji -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                            <Button Content="👁️ Szczegóły" Click="PokazSzczegoly_Click" Width="110" Margin="0,0,10,0" 
                                    x:Name="SzczegolyButton" IsEnabled="False"
                                    Background="#5E9CF9"/> <!-- Niebieski -->

                            <Button Content="✏️ Edytuj" Click="EdytujRosline_Click" Width="110" Margin="0,0,10,0" 
                                    x:Name="EdytujButton" IsEnabled="False"
                                    Background="#FFA726"/> <!-- Pomarańczowy -->

                            <Button Content="➕ Dodaj roślinę" Click="DodajRosline_Click" Width="130" Height="35"
                                    Background="#4CAF50"/> <!-- Zielony -->
                        </StackPanel>
                    </Grid>
                </TabItem>

                <TabItem Header="Do zrobienia dzisiaj">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Zaplanowane zabiegi na dziś" FontSize="18" Margin="0,0,0,15"/>

                        <Border Grid.Row="1" Background="White" CornerRadius="5" BorderThickness="1" BorderBrush="#E0E0E0">
                            <ListView Grid.Row="1" x:Name="PrzypomnieniaDzisListView" BorderThickness="0">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Roślina" DisplayMemberBinding="{Binding Roslina.Nazwa}" Width="200"/>
                                        <GridViewColumn Header="Zabieg" DisplayMemberBinding="{Binding TypZabiegu}" Width="150"/>
                                        <GridViewColumn Header="Data" DisplayMemberBinding="{Binding DataPlanowana, StringFormat=\{0:dd.MM.yyyy\}}" Width="120"/>
                                        <GridViewColumn Header="Status" Width="100">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CzyWykonane}" Click="Przypomnienie_Checked"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem Header="Wszystkie przypomnienia">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Wszystkie zaplanowane zabiegi" FontSize="18" Margin="0,0,0,15"/>

                        <Border Grid.Row="1" Background="White" CornerRadius="5" BorderThickness="1" BorderBrush="#E0E0E0">
                            <ListView Grid.Row="1" x:Name="PrzypomnieniaPelneListView" BorderThickness="0">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Roślina" DisplayMemberBinding="{Binding Roslina.Nazwa}" Width="200"/>
                                        <GridViewColumn Header="Zabieg" DisplayMemberBinding="{Binding TypZabiegu}" Width="150"/>
                                        <GridViewColumn Header="Data" DisplayMemberBinding="{Binding DataPlanowana, StringFormat=\{0:dd.MM.yyyy\}}" Width="120"/>
                                        <GridViewColumn Header="Status" Width="100">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CzyWykonane}" Click="Przypomnienie_Checked">
                                                        <CheckBox.Template>
                                                            <ControlTemplate TargetType="{x:Type CheckBox}">
                                                                <Border x:Name="checkBoxBorder" 
                                                                        BorderBrush="#CCCCCC" 
                                                                        BorderThickness="1"
                                                                        Background="White"
                                                                        Width="20" Height="20" 
                                                                        CornerRadius="3">
                                                                    <Path x:Name="checkMark" 
                                                                          Stroke="#4CAF50" 
                                                                          StrokeThickness="2"
                                                                          Data="M 4,10 L 8,15 L 16,5" 
                                                                          Visibility="Hidden"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsChecked" Value="true">
                                                                        <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                                                        <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="#4CAF50"/>
                                                                        <Setter TargetName="checkBoxBorder" Property="Background" Value="#E6F4E6"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </CheckBox.Template>
                                                    </CheckBox>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem Header="Gatunki">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Nagłówek sekcji -->
                        <TextBlock Grid.Row="0" Text="Zdefiniowane gatunki roślin" FontSize="18" Margin="0,0,0,15"/>
                        
                        <!-- Lista gatunków -->
                        <Border Grid.Row="1" Background="White" CornerRadius="5" BorderThickness="1" BorderBrush="#E0E0E0">
                            <ListView x:Name="GatunkiListView" BorderThickness="0">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Nazwa gatunku" DisplayMemberBinding="{Binding NazwaGatunku}" Width="200"/>
                                        <GridViewColumn Header="Podlewanie co (dni)" DisplayMemberBinding="{Binding WymagaNawadnianiaCoIleDni}" Width="150"/>
                                        <GridViewColumn Header="Nawożenie co (dni)" DisplayMemberBinding="{Binding WymagaNawozeniaCoIleDni}" Width="150"/>
                                        <GridViewColumn Header="Światło" DisplayMemberBinding="{Binding Swiatlo}" Width="100"/>
                                        <GridViewColumn Header="Temp. min (°C)" DisplayMemberBinding="{Binding TemperaturaMin}" Width="100"/>
                                        <GridViewColumn Header="Temp. max (°C)" DisplayMemberBinding="{Binding TemperaturaMax}" Width="100"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Border>
                        
                        <!-- Przycisk dodawania gatunku -->
                        <Button Grid.Row="2" Content="➕ Dodaj nowy gatunek" Click="DodajGatunek_Click" 
                                HorizontalAlignment="Right" Width="145" Height="35" Margin="0,15,0,0" Background="#4CAF50" />
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</Window>